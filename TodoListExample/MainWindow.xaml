    <!--              Padding="4" -->
    <!--              FontSize="32" -->
    <!--              FontWeight="Bold"> -->
    <!--     Todo List -->
    <!--   </TextBlock> -->
    <!-- </materialDesign:Card> -->
    
    <todoList:TodoListNameChangeView Grid.Row="0" 
                                     x:Name="TodoListNameChangeView"/>

    <todos:AddTodoView Grid.Row="1"
                       x:Name="AddTodoView"
                       HorizontalAlignment="Stretch" 
                       Margin="0 0 0 8"/>

    <todos:ViewTodoView Grid.Row="2"
                        x:Name="ViewTodoView" />
  </Grid>
</Window>